<h1 class="slider_title">{{ section.settings.slider_title }}</h1>

<div class="slider">
  {%- for block in section.blocks -%}
    <div>
      {%- if block.settings.image != blank -%}
        <img src="{{ block.settings.image | img_url: '2000x2000' }}" loading="lazy">
      {%- endif -%}
    </div>
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "スライダー付き画像",
  "class": "slide-wrap",
  "settings": [
    {
      "type": "text",
      "id": "slider_title",
      "default": "タイトルが入ります。",
      "label": "タイトル"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "画像",
      "limit": 15,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "画像"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "スライダー付き画像",
      "category": "画像",
      "settings": {}
    }
  ]
}
{% endschema %}
